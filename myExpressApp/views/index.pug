doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width = device-width, initial-scale = 1')
  title Log in
  link(rel='stylesheet' href='stylesheets/login.css')
  script(type='text/javascript' src='javascripts/links.js')
.columnLeft
  .loginForm
    form(action='/login/', method='POST')
        img.logoImg(src='images/logo.png')
        input#username(type='text' placeholder='Username' name='user')
        input#password(type='password' placeholder='Password' name='pass')
        input(class='signUp', type='submit', value='Log In')
        a.signupLink(onclick='signUp()') Sign Up
.columnRight
  h1.welcomeText Welcome Back!
  p.p1Text Nice to see you again! Enter your login credentials to sign in to FitFriends.

