doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Profile Page
  link(rel='icon' href='images/logoWhite.png')
  link(rel='stylesheet' href='stylesheets/profile.css')
  script(type='text/javascript' src='javascripts/links.js')
  script(type='text/javascript' src='javascripts/profile.js')
.topBar
  img.headerLogo(src='images/logoWhite.png')
  button.postBtn(onclick="workout()", class="ghost") + Add Workout
  form(action='/logout/', method='POST' enctype="multipart/form-data" class="logoutForm")
    button.logoutBtn(onclick="logout()") Log Out
.leftTab
  button.homeBtn(onclick="home()") Home
  br
  button.exploreBtn(onclick="explore()") Explore
  br
  button.exploreBtn(onclick="profile()") Profile
.rightTab
  table.profileHeader
    tr
      td





        img.profilePic(src=viewerCredentials.Pic class="profilepic" name="profilepic")


      td
        h1.profileName(class="example")=viewerCredentials.Name
        p.profileUsername=viewerCredentials.Username
        table.followTable
          tr
            td
              p.postTitle Posts
              p.postCount=viewerCredentials.Posts
            td
              p.followerTitle Followers
              p.followerCount=viewerCredentials.Followers
            td
              p.followingTitle Following
              p.followingCount=viewerCredentials.Following

      tr
        td(class="follow" name="follow")
          button#followBtn.followBtn(onclick="viewerSchedule()") Schedule
        td(class="bioData",name="bioData")



          textarea#bio(name='bio', class='bio', maxlength="100" disabled)=viewerCredentials.Bio



  hr#line      
  .content
    for l in x
      div(class="grid-content")
        div(class="postLabel")
          b=l.wName


        form(action='/findWorkout/', method='POST',class='workoutForm')
          video(src=l.image, id=l.id, onclick="video()", class="video")
          br
          input#idImage(type='text', class="invisible",name="idImage")
          input(type='submit', class="invisible")
          b(class="postdate")=l.date





