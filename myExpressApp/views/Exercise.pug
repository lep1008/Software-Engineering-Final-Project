doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Profile Page
    link(rel='stylesheet' href='stylesheets/post.css')
    script(type='text/javascript' src='javascripts/links.js')
    script(type='text/javascript' src='javascripts/workout.js')

.topBar
    img.headerLogo(src='images/logoWhite.png')
    button.logoutBtn(onclick="logout()") Log Out
.leftTab
    button.homeBtn Home
    br
    button.exploreBtn Explore
    br
    button.exploreBtn(onclick="profile()") Profile
.rightTab
    form(action='/Exercise/',method='POST', enctype="multipart/form-data", class="exForm")
        h1=workoutName
        h2 Add an Exercise:
        label Exercise:
        select.exercise(name='exercise',class='exercise', onchange='exerciseName()')
            for l in exercises 
                option=l

        br
        br
        label.weightLabel Weight (lbs)
        label.setsLabel Sets
        label.repsLabel Reps

        br
        b(class='exerciseLabel',name='liftLabel') Bench Press
        input.workoutWeight(name='weight' type='number')
        input.workoutSets(name='sets' type='number')
        input.workoutReps(name='reps' type='number')
        br
        br
        br
        input#video(type="file"  accept="video/* "  name='video')

        br
        br
        hr
        br
        button(onclick="addAnotherExercise()") Add Another Exercise
        br
        input#invisible(type='text', name="button", class="button")
        input(type='submit', value="Complete Workout")
